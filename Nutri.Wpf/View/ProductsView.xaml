<UserControl x:Class="Nutri.Wpf.View.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converter="clr-namespace:Nutris.Wpf.Converter"
             xmlns:local="clr-namespace:Nutri.Wpf.View"
             mc:Ignorable="d" 

             d:Background="White"
             d:DesignHeight="1040" d:DesignWidth="1600">

    <UserControl.Resources>
        <converter:IngredientByNameConverter x:Key="IngredientsCaloriesConverter"/>
        <converter:IngredientsPer100gByName x:Key="IngredientsPer100gByName"/>
        <converter:AddKcalConverter x:Key="AddKcalConverter"/>
        <converter:WaterConsumptionConverter x:Key="WaterConsumptionConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource SmoothBorder}" Margin="20 20 10 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 10" BorderBrush="LightGray"
                         materialDesign:HintAssist.Hint="Suche ..." 
                         Style="{StaticResource TextBoxDefaultEditable}"/>

                <ProgressBar Grid.Row="1" Width="400"
                             IsIndeterminate="{Binding FoodProcucts.IsLoading}"
                             Visibility="{Binding FoodProcucts.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <DataGrid Grid.Row="1"
                          Visibility="{Binding FoodProcucts.IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                          ItemsSource="{Binding FoodProcucts.Value, UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding SelectedFoodProduct, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource DataGridDefault}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nahrungsmittel" Width="5*"
                                            Binding="{Binding Name}"/>

                        <DataGridTextColumn Header="Kalorien" Width="2*"
                                            Binding="{Binding Ingredients, Converter={StaticResource IngredientsCaloriesConverter}, 
                                            ConverterParameter=Energy}"/>

                        <DataGridTextColumn Header="Proteine" Width="2*"
                                            Binding="{Binding Ingredients, Converter={StaticResource IngredientsCaloriesConverter}, 
                                            ConverterParameter=Protein}"/>

                        <DataGridTextColumn Header="Kohlenhydrate" Width="2*"
                                            Binding="{Binding Ingredients, Converter={StaticResource IngredientsCaloriesConverter}, 
                                            ConverterParameter='Carbohydrate, by difference'}"/>

                        <DataGridTextColumn Header="Fette" Width="2*"
                                            Binding="{Binding Ingredients, Converter={StaticResource IngredientsCaloriesConverter}, 
                                            ConverterParameter='Total lipid (fat)'}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource SmoothBorder}" Margin="10 20 20 10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Margin="10 10 10 25">
                        <TextBlock Text="{Binding SelectedFoodProduct.Name}" Style="{StaticResource TextBlockBigBold}"/>
                        <TextBlock Text="{Binding SelectedFoodProduct.Ingredients, Converter={StaticResource IngredientsPer100gByName}, ConverterParameter=Energy}"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="10 10 10 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource SmoothBorder}" 
                                BorderBrush="Green" 
                                Background="LightGreen"
                                Margin="0 0 10 10">
                            
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="FoodAppleOutline" 
                                                         Foreground="Green"
                                                         Margin="0 0 0 10"
                                                         HorizontalAlignment="Center" Width="30" Height="30"/>
                                <TextBlock Text="Ausgewogene Diät" Style="{StaticResource TextBlockBigBold}"/>
                            </StackPanel>

                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource SmoothBorder}" 
                                BorderBrush="Green" 
                                Background="LightGreen"
                                Margin="10 0 0 10">

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="FrenchFries" 
                                                         Foreground="Green"
                                                         Margin="0 0 0 10   "
                                                         HorizontalAlignment="Center" Width="30" Height="30"/>
                                <TextBlock Text="Low fat" Style="{StaticResource TextBlockBigBold}"/>
                            </StackPanel>

                        </Border>

                    </Grid>

                    <Grid Grid.Row="2" Margin="10 0 10 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource SmoothBorder}" 
                                BorderBrush="Orange"
                                Background="Gold"
                                Margin="0 10 10 0">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Dumbbell" 
                                                         Foreground="Orange"
                                                         Margin="0 0 0 10   "
                                                         HorizontalAlignment="Center" Width="30" Height="30"/>
                                <TextBlock Text="Muskelaufbau" Style="{StaticResource TextBlockBigBold}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource SmoothBorder}" 
                                BorderBrush="Red" 
                                Background="Orange"
                                Margin="10 10 0 0">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Dumbbell" 
                                                         Foreground="OrangeRed"
                                                         Margin="0 0 0 10   "
                                                         HorizontalAlignment="Center" Width="30" Height="30"/>
                                <TextBlock Text="Low carb" Style="{StaticResource TextBlockBigBold}"/>
                            </StackPanel>
                        </Border>

                    </Grid>
                </Grid>

            </Border>

            <Grid Grid.Row="1">

            </Grid>
        </Grid>

    </Grid>

</UserControl>
